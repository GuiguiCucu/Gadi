{# src/Gadi/SiteBundle/Resources/views/Site/voir.html.twig #}
 
{% extends "GadiSiteBundle::layout.html.twig" %}
 
{% block title %}
  Lecture d'un cours - {{ parent() }}
{% endblock %}
 
{% block gadisite_body %}
 
  <h2>Cours numero {{ cours.id }}</h2>
  <p>Type:  {{ cours.type }}, type de salle: {{ cours.typeSalle }}, d'une durée de {{ cours.duree }} à la date</p>
 
 
  <p>
    <a href="{{ path('gadisite_accueil') }}" class="btn">
      <i class="icon-chevron-left"></i>
      Retour à l'accueil
    </a>
 
{% endblock %}